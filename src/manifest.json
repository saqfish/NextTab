{
  "version": "0.0.2",
  "manifest_version": 2,
  "name": "mtb",
  "short_name": "mtb",
  "description": "A tool that switches to the next tab in the stack on refresh",
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "mtb",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "downloads",
    "storage"
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
