{
  "version": "0.0.2",
  "manifest_version": 2,
  "name": "NextTab",
  "short_name": "NextTab",
  "description": "A tool that automatically switches to the next tab in a list",
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon128.png",
      "48": "img/icon48.png",
      "16": "img/icon16.png"
    },
    "default_title": "NextTab",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "downloads",
    "storage"
  ],
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
